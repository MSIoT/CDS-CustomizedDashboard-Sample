
@section scripts{
    <script src="~/Assets/js/global-variable.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="https://admin.iot-cds.net/signalr/hubs"></script>
    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Assets/js/realtime-update.js"></script>
}


@{
    ViewBag.Title = "realtime";
}

<div id="famt-001-area" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 border-bottom">
    <h4 class="area-title">FAMT001</h4>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 card-wrapper line-chart-card-wrapper">
        <div class="widget-card line-chart-card">
            <div class="widget-card-title">Spindle Speed & Feed Rate</div>
            <div class="widget-card-content" id="widget-card-speed">
                <canvas id="spindle-speed-chart"></canvas>
            </div>
        </div>      
    </div>

</div>


<div id="gbox01-area" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <h4 class="area-title">GBox01</h4>      
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 card-wrapper">
        <div class="widget-card">
            <div class="widget-card-title">Humidity</div>
            <div class="widget-card-content" id="widget-card-humidity">
                <div class="value-num" id="widget-card-humidity-value">0</div>
            </div>
        </div>

    </div>

    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="widget-card">
            <div class="widget-card-title">Temperature</div>
            <div class="widget-card-content" id="widget-card-temperature">

                <div class="value-num">
                    <span id="widget-card-temperature-value">0</span>
                    <span>℃</span>
                </div>

            </div>
        </div>

    </div>

</div>
